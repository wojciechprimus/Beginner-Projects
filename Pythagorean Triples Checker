lista = [] # create empty list

def funkcja(self):
    for i in range(0, 3): # set up loop to run 3 times
        number = int(input('Please enter a number: ')) # prompt user for number
        lista.append(number) # append to our_list
    a = lista[0]
    b = lista[1]
    c = lista[2]
    if (a**2+b**2)==c**2  or (a**2+c**2)==b**2  or (b**2+c**2)==a**2:
        print("Yours numbers present Pythagorean Triple")
    else:
        print("Yours numbers are wrong")
while True:
    funkcja('self')
